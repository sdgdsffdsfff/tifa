<?xml version="1.0" encoding="GBK"?>

<ftp>

    <property name="host" value="127.0.0.1" comment="FTP服务器的IP或主机名"/>

    <property name="port" value="21" comment="FTP服务器的端口"/>

    <property name="username" value="walker" comment="登录FTP的用户名"/>

    <property name="password" value="123456" comment="登录FTP的密码"/>


    <property name="connMode" value="passive"
              comment="主动模式:active, 被动模式:passive; 默认为被动模式"/>

    <property name="fileType" value="bin"
              comment="二进制文件:bin, 文本方式:asc; 默认为二进制文件"/>

    <!--
    <property name="serverUp" value="/dc"
              comment="FTP服务器的上传文件存放目录,相对路径; 如果设为空串, 则表示不作上传处理"/>

    <property name="serverDn" value=""
              comment="FTP服务器的待下载文件存放目录,相对路径; 如果设为空串, 则表示不作下载处理"/>
     -->

</ftp>
